{% extends 'EGViewClassBundle::layout.html.twig' %}
{% block title %}{{ parent() }} - {{ class.classroomName }}{% endblock %}


{%  block egBody %}
    <div class="row">
        <h2 class="text-center">Liste des élèves de la classe {{ class.classroomName }}</h2>
        <div class="col-sm-10 col-sm-offset-1">
            <ul class="container-fluid bg-3 text-center-sm-3">
                {% for pupil in listPupil %}
                    <div class="col-md-2">
                        <li class="list-unstyled">
                            <a class="link" href="{{ path('eg_game_homepage', {id: pupil.id}) }}">
                                <div class="panel panel-title well-lg">
                                    <p id="cursive">
                                        {{ pupil.name }}
                                    </p>
                                </div>
                            </a>
                        </li>
                    </div>
                {%  endfor %}
            </ul>
        </div>
    </div>
{% endblock %}

