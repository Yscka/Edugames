<div class="well">
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}


    {{ form_errors(form) }}


    <div class="form-group">

        {{ form_label(form.classroomName, "Nom de la classe", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}


        {{ form_errors(form.classroomName) }}

        <div class="col-sm-10">
            {{ form_widget(form.classroomName, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>


    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

    {{ form_rest(form) }}

    {{ form_end(form) }}
</div>
